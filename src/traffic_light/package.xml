<?xml version="1.0"?>
<package format="2">
  <!--
    The ``traffic_light`` package provides a simple Python implementation
    for interpreting raw traffic light messages and computing steering
    commands.  It consists of helper classes for perception and decision
    making along with a ROS node script and a launch file.
  -->

  <name>traffic_light</name>
  <version>0.0.1</version>
  <description>Traffic light perception and decision node</description>

  <!-- Replace the maintainer name and eâ€‘mail address with your own. -->
